<input 
	id="acpf-{{ fields.name }}"
	name="acpf-{{ fields.name }}"
	type="{{ fields.type|lower }}"
	data-parsley-trigger="change"
	placeholder="{{ fields.placeholder }}"
	class="{{ fields.classes }}"
	{% if (fields.required) %}required{% endif %}
	{% if (fields.type == 'tel') %}data-parsley-minlength="10" data-parsley-pattern="^[\d\+\-\.\(\)\/\s]*$"{% endif %}
	{% if (fields.character_limit) %}data-parsley-maxlength="{{ fields.character_limit }}"{% endif %}
	{% if (validation_rule and validation_rule != "None") %}data-parsley-pattern="{{ validation_rule }}"{% endif %}
>