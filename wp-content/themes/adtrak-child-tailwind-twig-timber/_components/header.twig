<header class="pt-10 lg:pt-0">

  <div class="top-bar hidden bg-gray-100 lg:block">

    <div class="container">

      <nav id="navigation" class="hidden bg-blue-100 container lg:block">
        <ul class="menu-primary w-full flex flex-wrap justify-center">
          {% for item in secondaryMenu.items %}
          <li class="{{item.class}} {{ item.current ? 'current-menu-item' }}">
            <a href="{{item.link}}">{{item.name}}</a>
            {% if item.children %}
            <ul class="sub-menu">
              {% for child in item.children %}
              <li class="{{child.class}}">
                <a href="{{item.link}}">{{item.name}}</a>
              </li>
              {% endfor %}
            </ul>
            {% endif %}
          </li>
          {% endfor %}
        </ul>
      </nav>

    </div>

  </div>

  <div class="container lg:py-4 lg:flex flex-wrap justify-between items-center">

    <a class="block lg:inline-block" href="{{site.site_url}}">
      <img class="mx-auto max-w-40" src="{{options.site_logo.url}}" alt="{{site.title}} Logo" />
    </a>

    {% include "_components/phone-top-right.twig" %}

  </div>

  <nav id="navigation" class="hidden bg-blue-100 container lg:block">
    <ul class="menu-primary w-full flex flex-wrap justify-center">
      {% for item in primaryMenu.items %}
      <li class="{{item.class}} {{ item.current ? 'current-menu-item' }}">
        <a href="{{item.link}}">{{item.name}}</a>
        {% if item.children %}
          <ul class="sub-menu">
            {% for child in item.children %}
              <li class="{{child.class}}">
                <a href="{{child.link}}">{{child.name}}</a>
              </li>
            {% endfor %}
          </ul>          
        {% endif %}
      </li>
      {% endfor %}
    </ul>
  </nav>

</header>