<header class="absolute top-0 left-0 w-full pt-10 lg:pt-0">

  <div class="container flex flex-wrap justify-between items-center lg:py-4">

    <div clas="w-1/2">
      <a class="block lg:inline-block" href="{{site.site_url}}">
        <img class="mx-auto max-w-40" src="{{options.site_logo.url}}" alt="{{site.title}} Logo" />
      </a>
    </div>    

    <div class="w-full order-2">
      <a href="#" class="btn btn-primary">Button example one</a>
      <a href="#" class="btn btn-outline">Button example two</a>
    </div>

    <div class="menu w-1/3">MENU BUTTOn</div>

  </div>

  <nav id="navigation" class="hidden bg-blue-100 container lg:block">
    <ul class="menu-primary">
      {% for item in primaryMenu.items %}
        <li class="{{item.class}}">
          <a href="{{item.url}}">{{item.name}}</a>
          {% if item.children %}
            Children go here
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>  

</header>