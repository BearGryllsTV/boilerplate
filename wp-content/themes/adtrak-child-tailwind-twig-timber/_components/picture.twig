{# 
Custom picture, useful for any image. See bottom of this file for a full example.
 #}

<picture class="w-full {{ pictureClasses }}">

	{% for breakpoint, options in breakpoints %}
    
		<source
      srcset="{{
        source|
        resize(
          options.w|default(1000),
          options.h|default(500),
          options.crop|default('center')
          )|
        towebp
      }}"
      media="(min-width: {{breakpoint}})"
    >
    
		<source
      srcset="{{
        source|
        resize(
          options.w|default(1000),
          options.h|default(500),
          options.crop|default('center')
          )|
        tojpg
      }}"
      media="(min-width: {{breakpoint}})"
    >

	{% endfor %}

	<img
    src=""
    data-src="{{
      source|
      tojpg|
      resize(
        options.img.w|default(640),
        options.img.h|default(640),
        options.img.crop|default('center')
      )
    }}"
    alt="{{ options.img.alt|default(site.title) }}"
    class="{{ options.img.classes }} lazyload"
  >
</picture>

